#!/bin/bash

set -e

if (($# == 0)); then
  echo "Usage: update-branch [master|dev]"
  exit 1
fi

branch="$1"

# Snapshot functionality removed - configure snapshots manually if needed

if ! git -C "$HYPR_SETUP_PATH" diff --quiet || ! git -C "$HYPR_SETUP_PATH" diff --cached --quiet; then
  stashed=true
  git -C "$HYPR_SETUP_PATH" stash push -u -m "Autostash before switching to $branch"
else
  stashed=false
fi

# Switch branches
git -C "$HYPR_SETUP_PATH" switch "$branch"

# Reapply stash if we made one
if [[ $stashed == true ]]; then
  if ! git -C "$HYPR_SETUP_PATH" stash pop; then
    echo "⚠️ Conflicts when applying stash — stash kept"
  fi
fi

# Update the system from the new branch
update-perform
