#!/bin/bash

export PATH="${HYPR_SETUP_PATH:-$HOME/.local/share/hypr}/bin:$PATH"

# Set to true when going directly to a submenu, so we can exit directly
BACK_TO_EXIT=false

back_to() {
  local parent_menu="$1"

  if [[ "$BACK_TO_EXIT" == "true" ]]; then
    exit 0
  elif [[ -n "$parent_menu" ]]; then
    "$parent_menu"
  else
    show_main_menu
  fi
}

menu() {
  local prompt="$1"
  local options="$2"
  local extra="$3"
  local preselect="$4"

  read -r -a args <<<"$extra"

  if [[ -n "$preselect" ]]; then
    local index
    index=$(echo -e "$options" | grep -nxF "$preselect" | cut -d: -f1)
    if [[ -n "$index" ]]; then
      # Rofi uses 0-based indexing, and -selected-row flag
      args+=("-selected-row" "$((index - 1))")
    fi
  fi

  echo -e "$options" | rofi -dmenu -i -p "$prompt" -width 295 -lines 15 "${args[@]}" 2>/dev/null
}

terminal() {
  xdg-terminal-exec --app-id=org.hypr.terminal "$@"
}

present_terminal() {
  launch-floating-terminal-with-presentation $1
}

open_in_editor() {
  notify-send "Editing config file" "$1"
  launch-editor "$1"
}

install() {
  present_terminal "echo 'Installing $1...'; sudo pacman -S --noconfirm $2"
}

install_and_launch() {
  present_terminal "echo 'Installing $1...'; sudo pacman -S --noconfirm $2 && setsid gtk-launch $3"
}

install_font() {
  present_terminal "echo 'Installing $1...'; sudo pacman -S --noconfirm --needed $2 && sleep 2 && font-set '$3'"
}

install_terminal() {
  # Terminal installer removed - install manually
  present_terminal "echo 'Installing $1...'; sudo pacman -S --noconfirm --needed $1"
}

aur_install() {
  present_terminal "echo 'Installing $1 from AUR...'; yay -S --noconfirm $2"
}

aur_install_and_launch() {
  present_terminal "echo 'Installing $1 from AUR...'; yay -S --noconfirm $2 && setsid gtk-launch $3"
}

show_learn_menu() {
  case $(menu "Learn" "ï„œ  Keybindings\nï™  Hyprland\nó°£‡  Arch\nîš®  Neovim\nó±†ƒ  Bash") in
  *Keybindings*) menu-keybindings ;;
  # Removed: Omarchy manual link - no longer relevant
  *Hyprland*) launch-webapp "https://wiki.hypr.land/" ;;
  *Arch*) launch-webapp "https://wiki.archlinux.org/title/Main_page" ;;
  *Bash*) launch-webapp "https://devhints.io/bash" ;;
  *Neovim*) launch-webapp "https://www.lazyvim.org/keymaps" ;;
  *) show_main_menu ;;
  esac
}

show_capture_menu() {
  case $(menu "Capture" "ï€°  Screenshot\nó°ƒ‰  Color") in
  *Screenshot*) show_screenshot_menu ;;
  *Color*) pkill hyprpicker || hyprpicker -a ;;
  *) show_main_menu ;;
  esac
}

show_screenshot_menu() {
  case $(menu "Screenshot" "ï€°  Snap with Editing\nï€°  Straight to Clipboard") in
  *Editing*) cmd-screenshot smart ;;
  *Clipboard*) cmd-screenshot smart clipboard ;;
  *) show_capture_menu ;;
  esac
}

show_toggle_menu() {
  case $(menu "Toggle" "ó±„„  Screensaver\nó°”  Nightlight\nó±«–  Idle Lock\nó°œ  Top Bar") in
  *Screensaver*) toggle-screensaver ;;
  *Nightlight*) toggle-nightlight ;;
  *Idle*) toggle-idle ;;
  *Bar*) toggle-waybar ;;
  *) show_main_menu ;;
  esac
}

show_style_menu() {
  case $(menu "Style" "ó°¸Œ  Theme\nî™™  Font\nï€¾  Background\nï™  Hyprland\nó±„„  Screensaver\nî©´  About") in
  *Theme*) show_theme_menu ;;
  *Font*) show_font_menu ;;
  *Background*) theme-bg-next ;;
  *Hyprland*) open_in_editor ~/.config/hypr/looknfeel.conf ;;
  *Screensaver*) open_in_editor ~/.config/hypr/branding/screensaver.txt ;;
  *About*) open_in_editor ~/.config/hypr/branding/about.txt ;;
  *) show_main_menu ;;
  esac
}

show_theme_menu() {
  show-theme-menu
}

show_font_menu() {
  theme=$(menu "Font" "$(font-list)" "--width 350" "$(font-current)")
  if [[ "$theme" == "CNCLD" || -z "$theme" ]]; then
    back_to show_style_menu
  else
    font-set "$theme"
  fi
}

show_setup_menu() {
  local options="î˜¸  Audio\nï‡«  Wifi\nó°‚¯  Bluetooth\nó±‹  Power Profile\nó°¹  Monitors\nğŸ–¨ï¸  Printers"
  [ -f ~/.config/hypr/bindings.conf ] && options="$options\nï„œ  Keybindings"
  [ -f ~/.config/hypr/input.conf ] && options="$options\nî¾º  Input"
  options="$options\nï’‰  Defaults\nó°±”  DNS\nî¬‘  Security\nî˜•  Config"

  case $(menu "Setup" "$options") in
  *Audio*) launch-or-focus-tui wiremix ;;
  *Wifi*) launch-wifi ;;
  *Bluetooth*) launch-bluetooth ;;
  *Power*) show_setup_power_menu ;;
  *Monitors*) open_in_editor ~/.config/hypr/monitors.conf ;;
  *Printers*) uwsm-app -- system-config-printer ;;
  *Keybindings*) open_in_editor ~/.config/hypr/bindings.conf ;;
  *Input*) open_in_editor ~/.config/hypr/input.conf ;;
  *Defaults*) open_in_editor ~/.config/uwsm/default ;;
  *DNS*) present_terminal setup-dns ;;
  *Security*) show_setup_security_menu ;;
  *Config*) show_setup_config_menu ;;
  *) show_main_menu ;;
  esac
}

show_setup_power_menu() {
  profile=$(menu "Power Profile" "$(powerprofiles-list)" "" "$(powerprofilesctl get)")

  if [[ "$profile" == "CNCLD" || -z "$profile" ]]; then
    back_to show_setup_menu
  else
    powerprofilesctl set "$profile"
  fi
}

show_setup_config_menu() {
  case $(menu "Setup" "ï™  Hyprland\nï™  Hypridle\nï™  Hyprlock\nï™  Hyprsunset\nï  Swayosd\nó°Œ§  Walker\nó°œ  Waybar\nó°…  XCompose") in
  *Hyprland*) open_in_editor ~/.config/hypr/hyprland.conf ;;
  *Hypridle*) open_in_editor ~/.config/hypr/hypridle.conf && restart-hypridle ;;
  *Hyprlock*) open_in_editor ~/.config/hypr/hyprlock.conf ;;
  *Hyprsunset*) open_in_editor ~/.config/hypr/hyprsunset.conf && restart-hyprsunset ;;
  *Swayosd*) open_in_editor ~/.config/swayosd/config.toml && restart-swayosd ;;
  *Waybar*) open_in_editor ~/.config/waybar/config.jsonc && restart-waybar ;;
  *XCompose*) open_in_editor ~/.XCompose && notify-send "XCompose" "Restart manually if needed" ;;
  *) show_main_menu ;;
  esac
}

show_setup_security_menu() {
  case $(menu "Setup" "ó°ˆ·  Fingerprint\nî¬‘  Fido2") in
  *Fingerprint*) present_terminal setup-fingerprint ;;
  *Fido2*) present_terminal setup-fido2 ;;
  *) show_setup_menu ;;
  esac
}

show_install_menu() {
  case $(menu "Install" "ó°£‡  Package\nó°£‡  AUR\nï‰¨  Web App\nï’‰  TUI") in
  *Package*) terminal pkg-install ;;
  *AUR*) terminal pkg-aur-install ;;
  *Web*) present_terminal webapp-install ;;
  *TUI*) present_terminal tui-install ;;
  # Removed: Service, Style, Development, Editor, Terminal, AI, Windows, Gaming - install manually if needed
  *) show_main_menu ;;
  esac
}

# Removed menus: Service, Editor, Terminal, AI, Gaming, Style, Development
# Install these manually if needed

show_remove_menu() {
  case $(menu "Remove" "ó°£‡  Package\nï‰¨  Web App\nï’‰  TUI\nó°¸Œ  Theme\nó°ˆ·  Fingerprint\nî¬‘  Fido2") in
  *Package*) terminal pkg-remove ;;
  *Web*) present_terminal webapp-remove ;;
  *TUI*) present_terminal tui-remove ;;
  *Theme*) present_terminal theme-remove ;;
  *Fingerprint*) present_terminal "setup-fingerprint --remove" ;;
  *Fido2*) present_terminal "setup-fido2 --remove" ;;
  *) show_main_menu ;;
  esac
}

show_update_menu() {
  case $(menu "Update" "î®¢  Process\nó°‡…  Hardware\nî©¸  Firmware\nî¬‘  Password\nî¬  Timezone\nîƒ  Time") in
  *Process*) show_update_process_menu ;;
  *Hardware*) show_update_hardware_menu ;;
  *Firmware*) present_terminal update-firmware ;;
  *Timezone*) present_terminal tz-select ;;
  *Time*) present_terminal update-time ;;
  *Password*) show_update_password_menu ;;
  *) show_main_menu ;;
  esac
}

# Removed show_update_channel_menu - no longer using update channels
show_update_process_menu() {
  case $(menu "Restart" "ï™  Hypridle\nï™  Hyprsunset\nï  Swayosd\nó°œ  Waybar") in
  *Hypridle*) restart-hypridle ;;
  *Hyprsunset*) restart-hyprsunset ;;
  *Swayosd*) restart-swayosd ;;
  *Waybar*) restart-waybar ;;
  *) show_update_menu ;;
  esac
}

# Removed show_update_config_menu - no longer using omarchy config refresh

show_update_hardware_menu() {
  case $(menu "Restart" "î˜¸  Audio\nó±š¾  Wi-Fi\nó°‚¯  Bluetooth") in
  *Audio*) present_terminal restart-pipewire ;;
  *Wi-Fi*) present_terminal restart-wifi ;;
  *Bluetooth*) present_terminal restart-bluetooth ;;
  *) show_update_menu ;;
  esac
}

show_update_password_menu() {
  case $(menu "Update Password" "î¬‘  User") in
  *User*) present_terminal passwd ;;
  *) show_update_menu ;;
  esac
}

show_system_menu() {
  case $(menu "System" "ï€£  Lock\nó±„„  Screensaver\nó°œ‰  Restart\nó°¥  Shutdown") in
  *Lock*) lock-screen ;;
  *Screensaver*) launch-screensaver force ;;
  *Restart*) cmd-reboot ;;
  *Shutdown*) cmd-shutdown ;;
  *) back_to show_main_menu ;;
  esac
}

show_main_menu() {
  go_to_menu "$(menu "Go" "ó°€»  Apps\nó°§‘  Learn\nï€°  Capture\nó°”  Toggle\nî¯  Style\nî˜•  Setup\nó°‰‰  Install\nó°­Œ  Remove\nï€¡  Update\nî©´  About\nï€‘  System")"
}

go_to_menu() {
  case "${1,,}" in
  *apps*) launch-rofi ;;
  *learn*) show_learn_menu ;;
  *capture*) show_capture_menu ;;
  *toggle*) show_toggle_menu ;;
  *style*) show_style_menu ;;
  *theme*) show_theme_menu ;;
  *screenshot*) show_screenshot_menu ;;
  *setup*) show_setup_menu ;;
  *power*) show_setup_power_menu ;;
  *install*) show_install_menu ;;
  *remove*) show_remove_menu ;;
  *update*) show_update_menu ;;
  *about*) launch-about ;;
  *system*) show_system_menu ;;
  esac
}

if [[ -n "$1" ]]; then
  BACK_TO_EXIT=true
  go_to_menu "$1"
else
  show_main_menu
fi
