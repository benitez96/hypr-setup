#!/bin/bash

# Use HYPR_SETUP_PATH if available, otherwise default to standard location
HYPR_SETUP_PATH="${HYPR_SETUP_PATH:-$HOME/.local/share/hypr}"

# Exit early if we don't have the tte show
if ! command -v tte &>/dev/null; then
  exit 1
fi

# Exit early if screensave is already running
pgrep -f org.hypr.screensaver && exit 0

# Allow screensaver to be turned off but also force started
if [[ -f ~/.local/state/hypr/toggles/screensaver-off ]] && [[ $1 != "force" ]]; then
  exit 1
fi

# Silently quit Walker on overlay
walker -q

focused=$(hyprctl monitors -j | jq -r '.[] | select(.focused == true).name')
terminal=$(xdg-terminal-exec --print-id)

for m in $(hyprctl monitors -j | jq -r '.[] | .name'); do
  hyprctl dispatch focusmonitor $m

  case $terminal in
  *Alacritty*)
    hyprctl dispatch exec -- \
      alacritty --class=org.hypr.screensaver \
      --config-file "$HYPR_SETUP_PATH/default/alacritty/screensaver.toml" \
      -e cmd-screensaver
    ;;
  *ghostty*)
    hyprctl dispatch exec -- \
      ghostty --class=org.hypr.screensaver \
      --config-file="$HYPR_SETUP_PATH/default/ghostty/screensaver" \
      --font-size=18 \
      -e cmd-screensaver
    ;;
  *kitty*)
    hyprctl dispatch exec -- \
      kitty --class=org.hypr.screensaver \
      --override font_size=18 \
      --override window_padding_width=0 \
      -e cmd-screensaver
    ;;
  *)
    notify-send "âœ‹  Screensaver only runs in Alacritty, Ghostty, or Kitty"
    ;;
  esac
done

hyprctl dispatch focusmonitor $focused
