#!/bin/bash

# Simple screensaver launcher
# You can customize this based on your screensaver preference

# Allow screensaver to be turned off but also force started
if [[ -f ~/.local/state/toggles/screensaver-off ]] && [[ $1 != "force" ]]; then
  exit 1
fi

# Simple lock screen as screensaver
if command -v hyprlock &>/dev/null; then
  hyprlock
elif command -v swaylock &>/dev/null; then
  swaylock
else
  notify-send "No lock screen found. Install hyprlock or swaylock."
fi

