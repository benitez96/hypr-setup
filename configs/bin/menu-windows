#!/usr/bin/env bash

choice="$(printf '%s\n' \
  'Toggle floating' \
  'Toggle fullscreen' \
  'Focus next' \
  'Focus previous' \
  'Tile all (dwindle)' \
  | walker --dmenu --prompt 'Windows: ')"

case "$choice" in
  'Toggle floating')
    hyprctl dispatch togglefloating
    ;;
  'Toggle fullscreen')
    hyprctl dispatch fullscreen 0
    ;;
  'Focus next')
    hyprctl dispatch cyclenext
    ;;
  'Focus previous')
    hyprctl dispatch cyclenext prev
    ;;
  'Tile all (dwindle)')
    hyprctl dispatch workspaceopt allfloat false
    ;;
  *)
    exit 0
    ;;
esac
