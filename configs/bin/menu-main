#!/bin/bash

# MenÃº personalizado basado en omarchy-menu
# Adaptado para usar walker y comandos locales

BACK_TO_EXIT=false

back_to() {
  local parent_menu="$1"

  if [[ "$BACK_TO_EXIT" == "true" ]]; then
    exit 0
  elif [[ -n "$parent_menu" ]]; then
    "$parent_menu"
  else
    show_main_menu
  fi
}

menu() {
  local prompt="$1"
  local options="$2"
  local extra="$3"
  local preselect="$4"

  local args=()
  [[ -n "$extra" ]] && read -r -a args <<<"$extra"

  if [[ -n "$preselect" ]]; then
    local index
    index=$(echo -e "$options" | grep -nxF "$preselect" | cut -d: -f1)
    if [[ -n "$index" ]]; then
      args+=("-c" "$index")
    fi
  fi

  echo -e "$options" | walker --dmenu --width 295 --minheight 1 --maxheight 630 -p "$promptâ€¦" "${args[@]}" 2>/dev/null
}

terminal() {
  # Usar tu terminal flotante preferida
  ghostty --class=floating_terminal -e bash -c "$1; echo ''; echo 'Press any key to close...'; read -n 1"
}

present_terminal() {
  ghostty --class=floating_terminal -e bash -c "$1; echo ''; echo 'Press any key to close...'; read -n 1"
}

open_in_editor() {
  notify-send "Editing config file" "$1"
  # Ajustar segÃºn tu editor preferido
  ${EDITOR:-nvim} "$1"
}

# ==================== TRIGGER MENU ====================

show_trigger_menu() {
  case $(menu "Trigger" "ğŸ“¸  Capture\nğŸ“¤  Share\nğŸ”„  Toggle") in
  *Capture*) show_capture_menu ;;
  *Share*) show_share_menu ;;
  *Toggle*) show_toggle_menu ;;
  *) show_main_menu ;;
  esac
}

show_capture_menu() {
  case $(menu "Capture" "ğŸ“·  Screenshot\nğŸ¨  Color") in
  *Screenshot*) show_screenshot_menu ;;
  *Color*) pkill hyprpicker || hyprpicker -a ;;
  *) show_trigger_menu ;;
  esac
}

show_screenshot_menu() {
  case $(menu "Screenshot" "ğŸ“·  Snap with Editing\nğŸ“·  Straight to Clipboard") in
  *Editing*) ~/.local/bin/screenshot smart ;;
  *Clipboard*) ~/.local/bin/screenshot smart clipboard ;;
  *) show_capture_menu ;;
  esac
}

show_share_menu() {
  case $(menu "Share" "ğŸ“‹  Clipboard\nğŸ“„  File\nğŸ“  Folder") in
  *Clipboard*) cmd-share clipboard ;;
  *File*) terminal bash -c "cmd-share file" ;;
  *Folder*) terminal bash -c "cmd-share folder" ;;
  *) show_trigger_menu ;;
  esac
}

show_toggle_menu() {
  case $(menu "Toggle" "ğŸ¬  Screensaver\nğŸŒ™  Nightlight\nğŸ”’  Idle Lock\nğŸ“Š  Top Bar") in
  *Screensaver*) toggle-screensaver ;;
  *Nightlight*) toggle-nightlight ;;
  *Idle*) toggle-idle ;;
  *Bar*) toggle-waybar ;;
  *) show_trigger_menu ;;
  esac
}

# ==================== STYLE MENU ====================

show_style_menu() {
  case $(menu "Style" "ğŸ¨  Theme\nğŸ”¤  Font\nğŸ–¼ï¸   Background\nğŸªŸ  Hyprland\nğŸ¬  Screensaver\nâ„¹ï¸   About") in
  *Theme*) show_theme_menu ;;
  *Font*) show_font_menu ;;
  *Background*) theme-bg-next ;;
  *Hyprland*) open_in_editor ~/.config/hypr/looknfeel.conf ;;
  *Screensaver*) open_in_editor ~/.config/omarchy/branding/screensaver.txt 2>/dev/null || notify-send "File not found" ;;
  *About*) open_in_editor ~/.config/omarchy/branding/about.txt 2>/dev/null || notify-send "File not found" ;;
  *) show_main_menu ;;
  esac
}

show_theme_menu() {
  # Ajustar segÃºn tu sistema de temas
  walker -m menus:themes --width 800 --minheight 400 2>/dev/null || notify-send "Theme selector not available"
}

show_font_menu() {
  # Ajustar segÃºn tu sistema de fuentes
  current_font=$(font-current 2>/dev/null || echo "")
  font=$(menu "Font" "$(font-list 2>/dev/null || echo 'Font list not available')" "--width 350" "$current_font")
  if [[ "$font" == "CNCLD" || -z "$font" ]]; then
    back_to show_style_menu
  else
    font-set "$font" 2>/dev/null || notify-send "Failed to set font"
  fi
}

# ==================== SETUP MENU ====================

show_setup_menu() {
  local options="ğŸ”Š  Audio\nğŸ“¶  Wifi\nğŸ“±  Bluetooth\nğŸ”‹  Power Profile\nğŸ–¥ï¸   Monitors"
  [ -f ~/.config/hypr/bindings.conf ] && options="$options\nâŒ¨ï¸   Keybindings"
  [ -f ~/.config/hypr/input.conf ] && options="$options\nğŸ–±ï¸   Input"
  options="$options\nğŸ“  Defaults\nğŸŒ  DNS\nğŸ”’  Security\nâš™ï¸   Config"

  case $(menu "Setup" "$options") in
  *Audio*) launch-or-focus-tui wiremix ;;
  *Wifi*) launch-wifi ;;
  *Bluetooth*) launch-bluetooth ;;
  *Power*) show_setup_power_menu ;;
  *Monitors*) open_in_editor ~/.config/hypr/monitors.conf ;;
  *Keybindings*) open_in_editor ~/.config/hypr/bindings.conf ;;
  *Input*) open_in_editor ~/.config/hypr/input.conf ;;
  *Defaults*) open_in_editor ~/.config/uwsm/default 2>/dev/null || notify-send "File not found" ;;
  *DNS*) present_terminal "setup-dns" ;;
  *Security*) show_setup_security_menu ;;
  *Config*) show_setup_config_menu ;;
  *) show_main_menu ;;
  esac
}

show_setup_power_menu() {
  profile=$(menu "Power Profile" "$(powerprofiles-list 2>/dev/null || echo -e 'balanced\nperformance\npower-saver')" "" "$(powerprofilesctl get 2>/dev/null || echo 'balanced')")

  if [[ "$profile" == "CNCLD" || -z "$profile" ]]; then
    back_to show_setup_menu
  else
    powerprofilesctl set "$profile" 2>/dev/null || notify-send "Failed to set power profile"
  fi
}

show_setup_config_menu() {
  local options="ğŸªŸ  Hyprland\nâ°  Hypridle\nğŸ”’  Hyprlock\nğŸŒ…  Hyprsunset\nğŸ”Š  Swayosd\nğŸš¶  Walker\nğŸ“Š  Waybar"
  # Only show XCompose if .XCompose file exists or input method is installed
  [ -f ~/.XCompose ] || (command -v fcitx5 &>/dev/null || command -v ibus &>/dev/null) && options="$options\nâŒ¨ï¸   XCompose"
  
  case $(menu "Setup" "$options") in
  *Hyprland*) open_in_editor ~/.config/hypr/hyprland.conf ;;
  *Hypridle*) open_in_editor ~/.config/hypr/hypridle.conf && restart-hypridle ;;
  *Hyprlock*) open_in_editor ~/.config/hypr/hyprlock.conf ;;
  *Hyprsunset*) open_in_editor ~/.config/hypr/hyprsunset.conf && restart-hyprsunset ;;
  *Swayosd*) open_in_editor ~/.config/swayosd/config.toml && restart-swayosd ;;
  *Walker*) open_in_editor ~/.config/walker/config.toml && restart-walker ;;
  *Waybar*) open_in_editor ~/.config/waybar/config.jsonc && restart-waybar ;;
  *XCompose*) [ -f ~/.XCompose ] && open_in_editor ~/.XCompose && restart-xcompose || notify-send "XCompose not configured" ;;
  *) show_main_menu ;;
  esac
}

show_setup_security_menu() {
  case $(menu "Setup" "ğŸ‘†  Fingerprint\nğŸ”‘  Fido2") in
  *Fingerprint*) present_terminal "setup-fingerprint" ;;
  *Fido2*) present_terminal "setup-fido2" ;;
  *) show_setup_menu ;;
  esac
}

# ==================== INSTALL MENU ====================

show_install_menu() {
  case $(menu "Install" "ğŸ“¦  Package\nğŸ“¦  AUR\nğŸŒ  Web App\nğŸ’»  TUI") in
  *Package*) terminal "pkg-install" ;;
  *AUR*) terminal "pkg-aur-install" ;;
  *Web*) present_terminal "webapp-install" ;;
  *TUI*) present_terminal "tui-install" ;;
  *) show_main_menu ;;
  esac
}

# ==================== REMOVE MENU ====================

show_remove_menu() {
  case $(menu "Remove" "ğŸ“¦  Package\nğŸŒ  Web App\nğŸ’»  TUI\nğŸ‘†  Fingerprint\nğŸ”‘  Fido2") in
  *Package*) terminal "pkg-remove" ;;
  *Web*) present_terminal "webapp-remove" ;;
  *TUI*) present_terminal "tui-remove" ;;
  *Fingerprint*) present_terminal "setup-fingerprint --remove" ;;
  *Fido2*) present_terminal "setup-fido2 --remove" ;;
  *) show_main_menu ;;
  esac
}

# ==================== UPDATE MENU ====================

show_update_menu() {
  case $(menu "Update" "ğŸ”„  Process\nğŸ”§  Hardware\nğŸ”‘  Password\nğŸŒ  Timezone\nâ°  Time") in
  *Process*) show_update_process_menu ;;
  *Hardware*) show_update_hardware_menu ;;
  *Password*) show_update_password_menu ;;
  *Timezone*) present_terminal "tz-select" ;;
  *Time*) present_terminal "update-time" ;;
  *) show_main_menu ;;
  esac
}

show_update_process_menu() {
  case $(menu "Restart" "â°  Hypridle\nğŸŒ…  Hyprsunset\nğŸ”Š  Swayosd\nğŸš¶  Walker\nğŸ“Š  Waybar") in
  *Hypridle*) restart-hypridle ;;
  *Hyprsunset*) restart-hyprsunset ;;
  *Swayosd*) restart-swayosd ;;
  *Walker*) restart-walker ;;
  *Waybar*) restart-waybar ;;
  *) show_update_menu ;;
  esac
}

show_update_hardware_menu() {
  case $(menu "Restart" "ğŸ”Š  Audio\nğŸ“¶  Wi-Fi\nğŸ“±  Bluetooth") in
  *Audio*) present_terminal "restart-pipewire" ;;
  *Wi-Fi*) present_terminal "restart-wifi" ;;
  *Bluetooth*) present_terminal "restart-bluetooth" ;;
  *) show_update_menu ;;
  esac
}

show_update_password_menu() {
  case $(menu "Update Password" "ğŸ”‘  User") in
  *User*) present_terminal "passwd" ;;
  *) show_update_menu ;;
  esac
}

# ==================== SYSTEM MENU ====================

show_system_menu() {
  case $(menu "System" "ğŸ”’  Lock\nğŸ¬  Screensaver\nğŸ”„  Restart\nâ»  Shutdown") in
  *Lock*) lock-screen ;;
  *Screensaver*) launch-screensaver force ;;
  *Restart*) systemctl reboot ;;
  *Shutdown*) systemctl poweroff ;;
  *) back_to show_main_menu ;;
  esac
}

# ==================== MAIN MENU ====================

show_main_menu() {
  go_to_menu "$(menu "Go" "ğŸ“±  Apps\nğŸ¯  Trigger\nğŸ¨  Style\nâš™ï¸   Setup\nğŸ“¦  Install\nğŸ—‘ï¸   Remove\nğŸ”„  Update\nâ„¹ï¸   About\nğŸ–¥ï¸   System")"
}

go_to_menu() {
  case "${1,,}" in
  *apps*) walker -p "Launchâ€¦" ;;
  *trigger*) show_trigger_menu ;;
  *share*) show_share_menu ;;
  *style*) show_style_menu ;;
  *theme*) show_theme_menu ;;
  *screenshot*) show_screenshot_menu ;;
  *setup*) show_setup_menu ;;
  *power*) show_setup_power_menu ;;
  *install*) show_install_menu ;;
  *remove*) show_remove_menu ;;
  *update*) show_update_menu ;;
  *about*) launch-or-focus-tui "bash -c 'fastfetch; read -n 1 -s'" ;;
  *system*) show_system_menu ;;
  esac
}

if [[ -n "$1" ]]; then
  BACK_TO_EXIT=true
  go_to_menu "$1"
else
  show_main_menu
fi

