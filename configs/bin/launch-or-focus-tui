#!/usr/bin/env bash
# Script to launch or focus a TUI application

if [ -z "$1" ]; then
    echo "Usage: launch-or-focus-tui <app> [args...]"
    exit 1
fi

APP_NAME=$(basename "$1")
WINDOW_ADDRESS=$(hyprctl clients -j | jq -r --arg p "$APP_NAME" '.[]|select((.class|test("\\b" + $p + "\\b";"i")) or (.title|test("\\b" + $p + "\\b";"i")))|.address' | head -n1)

if [[ -n $WINDOW_ADDRESS ]]; then
    hyprctl dispatch focuswindow "address:$WINDOW_ADDRESS"
else
    exec setsid ghostty --class=floating_terminal -e "$1" "${@:2}"
fi

