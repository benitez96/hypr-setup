#!/usr/bin/env bash

choice="$(printf '%s\n' \
  'Apps' \
  'Screenshots' \
  'System' \
  'Windows' \
  'Clipboard' \
  'Utilities' \
  'Network' \
  'Setup' \
  | walker --dmenu --prompt 'Menu: ')"

case "$choice" in
  'Apps')
    walker
    ;;
  'Screenshots')
    ~/.local/bin/menu-screenshots
    ;;
  'System')
    ~/.local/bin/menu-system
    ;;
  'Windows')
    ~/.local/bin/menu-windows
    ;;
  'Clipboard')
    ~/.local/bin/menu-clipboard
    ;;
  'Utilities')
    ~/.local/bin/menu-utilities
    ;;
  'Network')
    ~/.local/bin/menu-network
    ;;
  'Setup')
    ~/.local/bin/menu-setup
    ;;
  *)
    exit 0
    ;;
esac
