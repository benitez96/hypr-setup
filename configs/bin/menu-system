#!/usr/bin/env bash

choice="$(printf '%s\n' \
  'Lock' \
  'Log out' \
  'Reboot' \
  'Poweroff' \
  | wofi --show dmenu --prompt 'System: ')"

case "$choice" in
  'Lock')
    lock-screen
    ;;
  'Log out')
    hyprctl dispatch exit 0
    ;;
  'Reboot')
    systemctl reboot
    ;;
  'Power off')
    systemctl poweroff
    ;;
  *)
    exit 0
    ;;
esac
